<%
  content_for(:title, '전체보기')
  content_for(:category_1, '뉴스고 지면편집')
  content_for(:pagedescription, '')
%>
<div class="col-sm-12 ">
<div class="row">
    <% @issue.pages.each do |page| %>
      <div class="col-sm-2 ">
        <a href="<%= page_path(page) %>">
          <img class="card" src="<%= page.jpg_image_path %>" width="100%"></img>
        </a>
        <!-- %= raw page.to_svg_with_jpg % -->
        <% if page.color_page %> 
        <h4 align='center'><%= link_to "#{page.page_number}면", page_path(page), class: "btn btn-outline-primary btn-xs" %></h4>
        <% else %>
        <h4 align='center'><%= link_to "#{page.page_number}면", page_path(page), class: "btn btn-outline-secondary btn-xs" %></h4>
        <% end %>
      <!-- true -->
      </div>
    <% end %>
  </div>
</div>
<!-- 편집화면 하단에 자주쓰는 이전, 저장, 다운 버튼을 항상 보이게 설정 -->
<nav class="navbar navbar-default navbar-fixed-bottom">
  <div class="btn-group" role="group" aria-label="전송">
  <%= link_to "데스크탑용 기사 xml 생성", save_story_xml_issue_path, method: :get, class: "btn btn-default btn-sm" %>
  <%= link_to "데스크탑용 지면보기 xml 생성", save_preview_xml_issue_path, method: :get, class: "btn btn-default btn-sm" %>
  <%= link_to "데스크탑용 xml 전송", send_xml_to_ebiz_issue_path, method: :get, data: { confirm: '정말 보내시겠습니까?'}, class: "btn btn-default btn-sm" %>
  <%= link_to "모바일용 xml 생성", save_mobile_preview_xml_issue_path, method: :get, class: "btn btn-default btn-sm" %>
  <%= link_to "모바일용 xml 전송/합성", merge_container_xml_issue_path, method: :get, class: "btn btn-default btn-sm" %>
  </div>
</nav>


